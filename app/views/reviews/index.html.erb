<div class="bg-white">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-12">
    <div class="text-center">
      <h1 class="text-3xl font-extrabold tracking-tight text-gray-900 sm:text-4xl">
        Venue Reviews
      </h1>
      <p class="mt-3 max-w-2xl mx-auto text-base text-gray-500 sm:mt-4">
        Discover what others are saying about our venues
      </p>
    </div>
    <div class="mt-10">
      <!-- Filter and Create button -->
      <div class="flex items-center justify-center lg:justify-between mb-6">
        <div class="flex items-center">
          <!-- Filter controls - can be expanded later -->
          <span class="text-base text-gray-900 font-medium">Filter by:</span>
          <div class="ml-3">
            <select class="rounded-md border-gray-300 py-2 text-base">
              <option>All venues</option>
              <option>Highest rated</option>
              <option>Most recent</option>
            </select>
          </div>
        </div>
      </div>
      <!-- Reviews grid -->
      <div class="mt-8">
        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
          <% @reviews.each_with_index do |review, index| %>
            <div class="<%= index.odd? ? 'bg-gray-50' : 'bg-white' %> rounded-lg shadow-md border border-gray-200 overflow-hidden transition duration-300 hover:shadow-lg flex flex-col h-full">
              <!-- Card header - colored bar at top -->
              <div class="h-2 bg-indigo-600"></div>
              <!-- Card content -->
              <div class="p-6 flex-grow">
                <!-- Title -->
                <h2 class="text-2xl font-bold text-gray-900 mb-4 hover:text-indigo-600">
                  <%=link_to review.venue.name, venue_path(review.venue)%>
                </h2>
                <!-- Venue with badge -->
                <div class="inline-flex items-center px-2.5 py-0.5 rounded-full text-sm font-medium bg-indigo-100 text-indigo-800 mb-4">
                  <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4 mr-1" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 21V5a2 2 0 00-2-2H7a2 2 0 00-2 2v16m14 0h2m-2 0h-5m-9 0H3m2 0h5M9 7h1m-1 4h1m4-4h1m-1 4h1m-5 10v-5a1 1 0 011-1h2a1 1 0 011 1v5m-4 0h4" />
                  </svg>
                  <%= review.venue.city %>
                </div>
                <!-- Rating stars -->
                <div class="flex items-center mb-4">
                  <div data-controller="rating-display" 
          data-rating-display-rating-value="<%= review.avg_rating || 0 %>" 
          data-rating-display-max-stars-value="6">
                    <div data-rating-display-target="starContainer" class="flex text-yellow-400 text-sm"></div>
                  </div>
                  <span class="ml-2 text-sm text-gray-600">
                    <%= review.avg_rating&.round(1) || "Not rated" %>
                  </span>
                </div>
                <!-- Content preview -->
                <div class="text-base text-gray-700 mb-6">
                  <%= truncate(review.content, length: 150) %>
                </div>
              </div>
              <!-- Card footer -->
              <div class="px-6 py-4 bg-gray-50 border-t border-gray-200">
                <div class="flex items-center justify-between">
                  <!-- User info -->
                  <div class="flex items-center">
                    <div class="h-12 w-12 rounded-full">
                      <%=avatar(review.user)%>
                    </div>
                    <div class="ml-3">
                      <p class="text-sm font-medium text-gray-900">
                        <%= review.user&.username || "Anonymous" %>
                      </p>
                      <p class="text-xs text-gray-500">
                        <%= review.created_at.strftime("%b %d, %Y") %>
                      </p>
                    </div>
                  </div>
                  <!-- Read more button -->
                  <%= link_to "Read", review_path(review), class: "inline-flex items-center px-3 py-1 border border-transparent rounded-md text-sm font-medium text-white bg-indigo-600 hover:bg-indigo-700" %>
                </div>
              </div>
            </div>
          <% end %>
        </div>
      </div>
      <!-- Pagination -->
      <div class="mt-10 flex justify-center">
        <nav class="inline-flex rounded-md shadow">
          <a href="#" class="inline-flex items-center px-4 py-2 rounded-l-md border border-gray-300 bg-white text-base font-medium text-gray-700 hover:bg-gray-50">
            Previous
          </a>
          <a href="#" class="inline-flex items-center px-4 py-2 border-t border-b border-gray-300 bg-white text-base font-medium text-indigo-600">
            1
          </a>
          <a href="#" class="inline-flex items-center px-4 py-2 border-t border-b border-gray-300 bg-white text-base font-medium text-gray-700 hover:bg-gray-50">
            2
          </a>
          <a href="#" class="inline-flex items-center px-4 py-2 rounded-r-md border border-gray-300 bg-white text-base font-medium text-gray-700 hover:bg-gray-50">
            Next
          </a>
        </nav>
      </div>
    </div>
  </div>
</div>