<%=turbo_frame_tag dom_id(notification), class:"divide-y" do%>
  <div class="my-2 hover:bg-gray-300 rounded-md">
    <div class="flex place-items-center justify-between py-2 px-1">
      <div class="text-sm">
        <%=notification.event.message%>
      </div>
      <div class="flex gap-5 place-items-center ">
        <div>
          <%= link_to "Check", notification.event.path, data: {turbo_frame: "_top"}, class:"text-xs bg-green-600 hover:bg-indigo-700 text-white px-2 py-1 rounded-md"%>
        </div>
        <div>
          <%= button_to "x", notification_path(notification),
                method: :delete,
                data: { turbo_method: :delete},
                class:" text-xs bg-red-600 hover:bg-red-700 text-white px-2 py-1 rounded-md"%>
        </div>
      </div>
    </div>
  </div>
<%end%>