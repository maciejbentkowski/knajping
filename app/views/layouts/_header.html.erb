<header>
  <div class="bg-gray-100 px-4 py-2">
    <div class="flex justify-between items-center">
      <div>
        <%= link_to "Knajping", root_path, class: "text-xl font-semibold hover:bg-gray-200 px-4 py-2 rounded-lg"%>
      </div>
      <div>
        <%=link_to "Lokale", venues_path, class: "block hover:bg-gray-200 px-4 py-2 rounded-lg"%>
      </div>
      <% if user_signed_in? %>
        <div class="flex items-center">
          <div class="hidden md:block pr-10 text-gray-800">
            Cześć, <%= current_user.username %>
          </div>
          <div data-controller="dropdown" class="">
            <button data-action="dropdown#toggle" class="p-2 hover:bg-gray-200 rounded-full">
              <div class="w-10 h-10 rounded-full overflow-hidden">
                avatar
              </div>
            </button>
            <ul data-dropdown-target="menu" class="hidden absolute right-0 mt-3 w-52 bg-white rounded-lg shadow-lg p-2 z-50">
              <li class="hover:bg-gray-100 rounded-lg">
                Profil
              </li>
              <% if (current_user.role == "owner")%>
                <li class="hover:bg-gray-100 rounded-lg">
                  <%=link_to "Dodaj lokal", new_venue_path%>
                </li>
              <% end%>
              <li class="hover:bg-gray-100 rounded-lg">
                <%=button_to "Wyloguj się", destroy_user_session_path, method: :delete %>
              </li>
            </ul>
          </div>
        </div>
      <% else %>
        <div class="flex sm:hidden">
          <div data-controller="dropdown">
            <button data-action="dropdown#toggle" class="p-2 hover:bg-gray-200 rounded-full">
              <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h8m-8 6h16" />
              </svg>
            </button>
            <ul data-dropdown-target="menu" class="hidden absolute right-0 mt-3 w-52 bg-white rounded-lg shadow-lg p-2 z-50">
              <li class="hover:bg-gray-100 rounded-lg">
                Profil
              </li>
              <li class="hover:bg-gray-100 rounded-lg">
                <li><%=link_to "zaloguj się", new_user_session_path, class: "p-2 hover:bg-gray-200 rounded-lg" %></li>
                <li><%=link_to "zarejestruj się", new_user_registration_path, class: "p-2 hover:bg-gray-200 rounded-lg" %></li>
              </li>
            </ul>
          </div>
        </div>
        <div class="hidden sm:block">
          <ul class="flex space-x-6 text-sm">
            <li><%=link_to "zaloguj się", new_user_session_path, class: "p-2 hover:bg-gray-200 rounded-lg" %></li>
            <li><%=link_to "zarejestruj się", new_user_registration_path, class: "p-2 hover:bg-gray-200 rounded-lg" %></li>
          </ul>
        </div>
      <% end %>
    </div>
  </div>
</header>