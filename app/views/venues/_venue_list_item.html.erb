<div class="@container/venue_card hover:bg-gray-100">
  <div class="w-3/4 mx-auto">
    <div class="w-full min-h-32 bg-base-100">
      <div class="grid grid-cols-12">
        <div class="col-span-4">
          <div class="relative bg-cover bg-no-repeat p-3">
            PHOTO
            <div class="absolute bottom-0 left-0 right-0 top-0 h-full w-full overflow-hidden bg-[hsla(0,0%,98%,0.15)] bg-fixed opacity-0 transition duration-300 ease-in-out hover:opacity-100">
            </div>
          </div>
        </div>
        <div class="col-span-8">
          <div class="ml-2">
            <div class="flex">
              <div class="">
                <h3 class="text-md mt-2 sm:text-xs md:text-lg font-medium">
                  <%=link_to venue.name, venue_path(venue), data: {turbo_frame: "_top"}%>
                </h3>
                <div class="text-xs">
                  <%=venue_ratings(venue)%>
                </div>
              </div>
              <div class="">
              </div>
            </div>
            <div class="text-xs italic mt-2">
              CATEGORIES
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
