<% if venues.blank? || venues.count == 0 %>
  <div class="bg-white shadow-md rounded-lg p-8 text-center">
    <i class="fas fa-search text-indigo-300 text-5xl mb-4"></i>
    <h3 class="text-lg font-medium text-gray-900 mb-2">No venues found</h3>
    <p class="text-gray-600">We couldn't find any venues matching your search criteria. Try adjusting your filters or search terms.</p>
  </div>
<% else %>
  <div class="space-y-6">
    <% venues.each do |venue| %>
      <%= render partial: "venues/venues_list_item", locals: {venue: venue} %>
    <% end %>
  </div>
  <div class="mt-6 flex justify-center">
    <%== pagy_nav(@pagy) if @pagy.pages > 1 %>
  </div>
<% end %>