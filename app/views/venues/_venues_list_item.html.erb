<!-- _venues_list_item.html.erb -->
<div class="bg-white shadow-md rounded-lg overflow-hidden hover:shadow-lg transition-shadow duration-300">
  <div class="grid grid-cols-12">
    <!-- Venue Image -->
    <div class="col-span-4">
      <div class="relative h-full">
        Photo
      </div>
    </div>
    <!-- Venue Details -->
    <div class="col-span-8 p-4">
      <h3 class="text-lg font-semibold mb-1 hover:text-indigo-600 transition">
        <%= link_to venue.name, venue_path(venue), data: {turbo_frame: "_top"} %>
      </h3>
      <!-- Star Rating -->
      <div data-controller="rating-display" 
          data-rating-display-rating-value="<%= venue.avg_rating || 0 %>" 
          data-rating-display-max-stars-value="6">
        <div data-rating-display-target="starContainer" class="flex text-yellow-400 text-sm"></div>
      </div>
      <!-- Location -->
      <div class="flex items-center text-sm text-gray-500 mt-2">
        <i class="fas fa-map-marker-alt mr-2 text-indigo-500"></i>
        Venue adress
      </div>
      <!-- Categories -->
      <div class="flex flex-wrap gap-2 mt-3">
        <% venue.main_types.each do |category| %>
          <span class="px-2 py-1 bg-indigo-100 text-indigo-800 text-xs rounded-full"><%= category.name %></span>
        <% end %>
      </div>
      <!-- Preview text or latest review snippet -->
      <% if venue.reviews.any? %>
        <p class="text-gray-600 text-sm mt-2 line-clamp-2">
          "<%= venue.reviews.first.content %>"
        </p>
      <% end %>
    </div>
  </div>
</div>