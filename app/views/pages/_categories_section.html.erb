<div>
  <div class="grid grid-cols-2 gap-4 sm:grid-cols-3 md:grid-cols-4 ">
    <% @four_random_categories.each do |category|%>
      <div class="group">
        <div class="bg-white overflow-hidden shadow rounded-lg group-hover:shadow-lg transition-shadow duration-200">
          <div class="p-6 text-center">
            <div class="bg-indigo-100 rounded-full p-4 mx-auto w-16 h-16 flex items-center justify-center text-indigo-600 mb-4">
              <i class="fas fa-<%=category.icon_name%> text-2xl"></i>
            </div>
            <h3 class="text-gray-900 group-hover:text-indigo-600 font-medium"><%=category.name%></h3>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>