<div class="grid grid-cols-1 gap-6 sm:grid-cols-2 lg:grid-cols-3">
  <% featured_venues.each do |venue|%>
    <div class="bg-white overflow-hidden shadow rounded-lg">
      <div class="relative h-48">
        <img class="w-full h-full object-cover" src="/api/placeholder/400/300" alt="Restaurant interior">
        <div class="absolute top-0 right-0 m-2 bg-white rounded-full p-1">
          <span class="flex items-center px-2 py-1">
            <i class="fas fa-star text-yellow-400 mr-1"></i>
            <span class="font-bold">4.8</span>
          </span>
        </div>
      </div>
      <div class="p-6">
        <h3 class="text-xl font-semibold mb-2"><%=venue.name%></h3>
        <div class="flex items-center text-sm text-gray-500 mb-3">
          <i class="fas fa-map-marker-alt mr-2 text-indigo-500"></i>
          <span>Stockholm City Center</span>
        </div>
        <div class="flex flex-wrap gap-2 mb-4">
          <span class="px-2 py-1 bg-indigo-100 text-indigo-800 text-xs rounded-full">Fine Dining</span>
          <span class="px-2 py-1 bg-indigo-100 text-indigo-800 text-xs rounded-full">Nordic</span>
          <span class="px-2 py-1 bg-indigo-100 text-indigo-800 text-xs rounded-full">$$$$</span>
        </div>
        <p class="text-gray-700 text-sm mb-4">Experience the finest Nordic cuisine with seasonal ingredients and innovative presentations...</p>
        <span class="text-indigo-600 hover:text-indigo-900 font-medium">
          <%=link_to "Sprawdz", venue_path(venue)%><i>&rarr;</i>
        </span>
      </div>
    </div>
  <% end%>
</div>