<div class="bg-white">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <!-- Profile Header -->
    <div class="py-12">
      <div class="lg:flex lg:items-center lg:justify-between">
        <div class="flex-1 min-w-0">
          <div class="flex items-center">
            <div >
              <div class="h-15 w-15">
                <%= avatar(@profile)%>
              </div>
            </div>
            <div class="ml-3">
              <h1 class="text-3xl font-extrabold tracking-tight text-gray-900 sm:text-4xl">
                <%= @profile.username %>
              </h1>
              <p class="text-base text-gray-500">
                Member since <%= @profile.created_at.strftime("%B %Y") %>
              </p>
            </div>
          </div>
        </div>
        <div class="mt-5 lg:mt-0 lg:flex-shrink-0">
          <%= link_to edit_user_registration_path(), class: "inline-flex items-center px-4 py-2 border border-transparent text-base font-medium rounded-md text-white bg-indigo-600 hover:bg-indigo-700" do %>
            <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 mr-2" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 0L11.828 15H9v-2.828l8.586-8.586z" />
            </svg>
            Edit Profile
          <% end %>
        </div>
      </div>
    </div>
  </div>
  <!-- User Details Section -->
  <div class="bg-gray-100">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-12">
      <h2 class="text-3xl font-extrabold tracking-tight text-gray-900 mb-6">
        Personal Information
      </h2>
      <div class="bg-white shadow overflow-hidden rounded-md">
        <div class="px-4 py-5 sm:px-6">
          <h3 class="text-lg leading-6 font-medium text-gray-900">
            User Details
          </h3>
          <p class="mt-1 max-w-2xl text-sm text-gray-500">
            Your personal information and account settings.
          </p>
        </div>
        <div class="border-t border-gray-200">
          <dl>
            <div class="bg-gray-50 px-4 py-5 sm:grid sm:grid-cols-3 sm:gap-4 sm:px-6">
              <dt class="text-sm font-medium text-gray-500">
                Full name
              </dt>
              <dd class="mt-1 text-sm text-gray-900 sm:mt-0 sm:col-span-2">
                <%= @profile.username %>
              </dd>
            </div>
            <div class="bg-white px-4 py-5 sm:grid sm:grid-cols-3 sm:gap-4 sm:px-6">
              <dt class="text-sm font-medium text-gray-500">
                Email address
              </dt>
              <dd class="mt-1 text-sm text-gray-900 sm:mt-0 sm:col-span-2">
                <%= @profile.email %>
              </dd>
            </div>
            <div class="bg-gray-50 px-4 py-5 sm:grid sm:grid-cols-3 sm:gap-4 sm:px-6">
              <dt class="text-sm font-medium text-gray-500">
                Account type
              </dt>
              <dd class="mt-1 text-sm text-gray-900 sm:mt-0 sm:col-span-2">
                <%= @profile.role.titleize %>
              </dd>
            </div>
          </dl>
        </div>
      </div>
    </div>
  </div>
  <!-- User Reviews Section -->
  <% if @profile.role == "reviewer"%>
    <%=render partial: "pages/profile/owned_reviews"%>
  <% elsif @profile.role == "owner" %>
    <%=render partial: "pages/profile/owned_venues"%>
  <% end%>
</div>
