<div class="bg-white">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-12">
    <div class="lg:flex lg:items-center lg:justify-between mb-6">
      <h2 class="text-3xl font-extrabold tracking-tight text-gray-900">
        Your venues
      </h2>
    </div>
    <% if @user_venues.any? %>
      <div class="h-80 pr-2 overflow-y-auto">
        <div class="space-y-4 ">
          <% @user_venues.each do |venue| %>
            <div class="bg-gray-50 rounded-md shadow overflow-hidden">
              <div class="px-4 py-3 sm:p-4">
                <div class="flex items-center justify-between">
                  <div>
                    <h3 class="text-lg font-medium text-gray-900">
                      <%=link_to venue.name, venue_path(venue) %>
                    </h3>
                    <div class="mt-1 flex items-center">
                      <div data-controller="rating-display" 
                        data-rating-display-rating-value="<%= venue.avg_rating %>" 
                        data-rating-display-max-stars-value="6" class="flex">
                        <div data-rating-display-target="starContainer" class="flex text-yellow-400"></div>
                        <span data-rating-display-target="ratingValue" class="ml-2 font-bold text-gray-500 text-sm"></span>
                      </div>
                      <span class="ml-2 text-xs text-gray-500">
                        <%= venue.created_at.strftime("%B %d, %Y") %>
                      </span>
                    </div>
                  </div>
                  <div class="flex space-x-2">
                    <%= link_to edit_venue_path(venue), class: "inline-flex items-center p-1 border border-transparent rounded-md text-indigo-600 hover:bg-indigo-50" do %>
                      <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15.232 5.232l3.536 3.536m-2.036-5.036a2.5 2.5 0 113.536 3.536L6.5 21.036H3v-3.572L16.732 3.732z" />
                      </svg>
                    <% end %>
                    <%= button_to venue_path(venue), method: :delete, class: "inline-flex items-center p-1 border border-transparent rounded-md text-red-600 hover:bg-red-50", data: { turbo_confirm: "Are you sure you want to delete this venue?" } do %>
                      <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16" />
                      </svg>
                    <% end %>
                  </div>
                </div>
                <%if venue.activate%>
                  <div class="text-green-400/70">
                    Lokal aktywny
                  </div>
                <% else%>
                  <div class="text-red-500/70">
                    Lokal nieaktywny
                  </div>
                <% end %>
              </div>
            </div>
          <% end %>
        </div>
      </div>
    <% else %>
      <div class="bg-gray-50 p-6 text-center rounded-md">
        <svg class="mx-auto h-12 w-12 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9.663 17h4.673M12 3v1m6.364 1.636l-.707.707M21 12h-1M4 12H3m3.343-5.657l-.707-.707m2.828 9.9a5 5 0 117.072 0l-.548.547A3.374 3.374 0 0014 18.469V19a2 2 0 11-4 0v-.531c0-.895-.356-1.754-.988-2.386l-.548-.547z"></path>
        </svg>
        <h3 class="mt-2 text-sm font-medium text-gray-900">No venues</h3>
        <p class="mt-1 text-sm text-gray-500">
          Nie dodałeś jeszcze zadnych lokali
        </p>
      </div>
    <% end %>
  </div>
</div>