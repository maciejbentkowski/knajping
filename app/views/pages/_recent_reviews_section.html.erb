<div class="grid grid-cols-1 gap-6 md:grid-cols-2 lg:grid-cols-3">
  <% recent_reviews.each do |review|%>
    <div class="bg-white overflow-hidden shadow rounded-lg">
      <div class="p-6">
        <div class="flex items-center mb-4">
          <img class="h-12 w-12 rounded-full" src="/api/placeholder/48/48" alt="User avatar">
          <div class="ml-4">
            <h3 class="text-lg font-medium text-gray-900"><%= review.user.username %></h3>
            <div class="flex items-center">
              <div data-controller="rating-display" 
                  data-rating-display-rating-value="<%= review.avg_rating %>" 
                  data-rating-display-max-stars-value="6" class="flex">
                <div data-rating-display-target="starContainer" class="flex text-yellow-400"></div>
                <span data-rating-display-target="ratingValue" class="ml-2 font-bold text-gray-500 text-sm"></span>
              </div>
            </div>
          </div>
        </div>
        <h4 class="font-semibold text-gray-900 mb-2"><%= review.venue.name %></h4>
        <p class="text-gray-700 text-sm mb-3"><%= review.content %></p>
        <div class="text-sm text-gray-500"><%= time_ago_in_words(review.created_at) %> ago</div>
      </div>
    </div>
  <% end %>
</div>