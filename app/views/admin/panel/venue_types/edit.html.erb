<div class="flex flex-col gap-4 p-4">
  <%= form_with model: @venue_type, url: admin_venue_type_path(@venue_type), method: :put do |form| %>
    <div class="">
      <div class="my-2">
        <%= form.label :name, "Nazwa" %>
        <div>
          <%= form.text_field :name, class: "w-1/4 p-2 rounded-md shadow-sm bg-white border border-gray-300" %>
        </div>
      </div>
      <div class="my-2">
        <%= form.label :icon_name, "Ikona" %>
        <div>
          <%= form.text_field :icon_name, class: "w-1/4 p-2 rounded-md shadow-sm bg-white border border-gray-300" %>
        </div>
      </div>
      <div class="">
        <%= form.submit "Aktualizuj", class: "bg-green-500 px-2 py-1 rounded-md" %>
      </div>
    </div>
  <% end %>
  <div class="mt-4 border-t pt-4">
    <h2 class="font-bold mb-2 text-gray-700 text-2xl">Lokale:</h2>
    <ul class="grid grid-cols-3 gap-2">
      <% @venue_type.venues.each do |venue| %>
        <li>
          <%=link_to venue.name, venue_path(venue), class: "text-blue-500 hover:text-blue-600" %>
        </li>
      <% end %>
    </ul>
  </div>
</div>
