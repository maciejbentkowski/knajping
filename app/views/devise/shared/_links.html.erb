<div class="mt-4 space-y-2">
  <%- if controller_name != 'sessions' %>
    <div>
      <%= link_to "Zaloguj się", new_session_path(resource_name), class: "text-sm font-medium text-indigo-600 hover:text-indigo-500" %>
    </div>
  <% end %>
  <%- if devise_mapping.registerable? && controller_name != 'registrations' %>
    <div>
      <%= link_to "Zarejestruj się", new_registration_path(resource_name), class: "text-sm font-medium text-indigo-600 hover:text-indigo-500" %>
    </div>
  <% end %>
  <%- if devise_mapping.recoverable? && controller_name != 'passwords' && controller_name != 'registrations' %>
    <div>
      <%= link_to "Zapomniałeś hasła?", new_password_path(resource_name), class: "text-sm font-medium text-indigo-600 hover:text-indigo-500" %>
    </div>
  <% end %>
  <%- if devise_mapping.confirmable? && controller_name != 'confirmations' %>
    <div>
      <%= link_to "Nie otrzymałeś instrukcji potwierdzających?", new_confirmation_path(resource_name), class: "text-sm font-medium text-indigo-600 hover:text-indigo-500" %>
    </div>
  <% end %>
  <%- if devise_mapping.lockable? && resource_class.unlock_strategy_enabled?(:email) && controller_name != 'unlocks' %>
    <div>
      <%= link_to "Nie otrzymałeś instrukcji odblokowujących?", new_unlock_path(resource_name), class: "text-sm font-medium text-indigo-600 hover:text-indigo-500" %>
    </div>
  <% end %>
  <%- if devise_mapping.omniauthable? %>
    <%- resource_class.omniauth_providers.each do |provider| %>
      <div>
        <%= button_to "Zaloguj się z #{OmniAuth::Utils.camelize(provider)}", omniauth_authorize_path(resource_name, provider), class: "text-sm font-medium text-indigo-600 hover:text-indigo-500" %>
      </div>
    <% end %>
  <% end %>
</div>